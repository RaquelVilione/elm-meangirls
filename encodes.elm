encodeSerie : Stock -> Value
encodeSerie {id_, 
            nome, 
            mediaNota, 
            poster, 
            dataInicio, 
            popularidade} = object [("idApi", int id_),
                            ("name", string nome),
                            ("vote_average", float mediaNota),
                            ("poster_path", string <| Maybe.withDefault "" poster),
                            ("first_air_date", string dataInicio),
                            ("popularity", float popularidade)]
